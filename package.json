{
  "author": "",
  "bin": {
    "typescript-viewer": "dist/bin/typescript-viewer.js"
  },
  "dependencies": {
    "@dagrejs/dagre": "^2.0.3",
    "@duckdb/node-api": "1.4.4-r.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/controls": "^1.1.3",
    "@vue-flow/core": "^1.48.2",
    "apache-arrow": "^21.1.0",
    "ast-types": "^0.14.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "consola": "^3.4.2",
    "elkjs": "^0.11.0",
    "jscodeshift": "^17.3.0",
    "mermaid": "^11.12.2",
    "ora": "^9.3.0",
    "pinia": "^3.0.4",
    "read-package-up": "^12.0.0",
    "read-pkg": "^10.1.0",
    "recast": "^0.23.11",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "uuid": "^13.0.0",
    "vitest": "^4.0.18",
    "vue": "^3.5.28"
  },
  "description": "TypeScript codebase visualization tool",
  "devDependencies": {
    "@magus-mark/eslint-config": "workspace:*",
    "@magus-mark/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/jscodeshift": "^17.3.0",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.24",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "vite-bundle-analyzer": "^1.3.6",
    "vite-plugin-node-polyfills": "^0.25.0",
    "vue-tsc": "^3.2.4"
  },
  "keywords": [
    "typescript",
    "visualization",
    "dependency-graph",
    "analysis"
  ],
  "license": "ISC",
  "main": "dist/index.js",
  "name": "magus-typescript-viewer",
  "scripts": {
    "analyze": "node dist/bin/typescript-viewer.js analyze",
    "build": "pnpm typecheck && vite build && node ./esbuild.config.js",
    "dev": "pnpm run --filter magus-typescript-viewer --parallel \"/^dev:.*/\"",
    "dev:server": "nodemon --watch src/server --watch src/server.ts --watch src/server/db --exec 'tsx' src/server.ts",
    "dev:ui": "vite",
    "lint": "eslint src/server/parsers src/server/cli src/client/utils src/client/graph/cluster vitest.config.ts eslint.config.js",
    "lint:fix": "eslint src/server/parsers src/server/cli src/client/utils src/client/graph/cluster vitest.config.ts eslint.config.js --fix",
    "preview": "vite preview",
    "serve": "node dist/bin/typescript-viewer.js serve",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "type": "module",
  "version": "1.0.0"
}
