{
  "compilerOptions": {
    "outDir": "${configDir}/dist/test",
    "rootDir": "${configDir}/src",
    "types": ["node", "vitest/globals", "vitest"],
    "tsBuildInfoFile": "${configDir}/dist/test.tsbuildinfo"
  },
  "extends": "./base.json",
  "include": [
    "${configDir}/src/vite.config.mts",
    "${configDir}/src/vite.config.ts",
    "${configDir}/src/**/*.test.ts",
    "${configDir}/src/**/*.spec.ts",
    "${configDir}/src/**/*.test.tsx",
    "${configDir}/src/**/*.spec.tsx",
    "${configDir}/src/**/*.test.mts",
    "${configDir}/src/**/*.spec.mts",
    "${configDir}/src/**/*.test.mtsx",
    "${configDir}/src/**/*.spec.mtsx",
    "${configDir}/**/__tests__/**/*.ts",
    "${configDir}/**/__tests__/**/*.tsx",
    "${configDir}/**/__tests__/**/*.mts",
    "${configDir}/**/__tests__/**/*.mtsx",
    "${configDir}/**/__tests__/**/*.spec.ts",
    "${configDir}/**/__tests__/**/*.spec.tsx",
    "${configDir}/**/__tests__/**/*.spec.mts",
    "${configDir}/**/__tests__/**/*.spec.mtsx"
  ]
}
