{
  "compilerOptions": {
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}",
    "types": [ "node" ]
  },
  "exclude": [
    "${configDir}/eslint.config.js",
    "${configDir}/**/node_modules",
    "${configDir}/**/node_modules/**/*",
    "${configDir}/**/dist",
    "${configDir}/**/dist/**/*",
    "${configDir}/**/build",
    "${configDir}/**/build/**/*",
    "${configDir}/**/documentation",
    "${configDir}/**/.cursor/**",
    "${configDir}/**/examples/**/*",
    "${configDir}/**/node_modules/.pnpm/**/*",
    "${configDir}/**/*.stories.ts",
    "${configDir}/**/*.stories.tsx",
    "${configDir}/.storybook/**/*"
  ],
  "extends": "./settings.json",
  "references": [
    {
      "path": "./build.json"
    },
    {
      "path": "./test.json"
    }
  ],
  "watchOptions": {
    "excludeDirectories": [ "${configDir}/**/node_modules/**/*", "${configDir}/**/dist/**/*" ],
    "watchDirectory": "useFsEvents",
    "watchFile": "useFsEvents"
  }
}
