{
  "extends": "./base.json",
  "compilerOptions": {
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}/src",
    "types": [ "node" ],
    "tsBuildInfoFile": "${configDir}/dist/build.tsbuildinfo"
  },
  "include": [ "${configDir}/src/**/!(*.test|*.spec|*.stories).{ts,tsx}", "${configDir}/src/**/!(*.test|*.spec|*.stories).{mts,mtsx}", "${configDir}/src/**/*.vue", "${configDir}/vite.config.ts", "vite.config.mts" ],
  "watchOptions": {
    "excludeDirectories": [ "${configDir}/**/node_modules/**/*", "${configDir}/**/dist/**/*" ],
    "watchDirectory": "useFsEvents",
    "watchFile": "useFsEvents"
  }
}
